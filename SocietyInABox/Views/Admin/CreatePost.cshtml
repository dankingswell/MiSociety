@model SocietyInABox.Models.Post

@{
    ViewBag.Title = "CreatePost";
}

<h2>Create A Post</h2>

<div class="row">
    <div class="col-md-8">
        <section>
            @using (Html.BeginForm("PostCreationRequest", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {

            <div class="form-group">
                @Html.LabelFor(p => p.Header, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(p => p.Header, new { @class = "form-control" })
                    @Html.ValidationMessageFor(p => p.Header, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(p => p.Content, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextAreaFor(p => p.Content, new { @class = "form-control" })
                    @Html.ValidationMessageFor(p => p.Content, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create Post" class="btn btn-default" />
                </div>
            </div>

            }
        </section>
    </div>

    
</div>


